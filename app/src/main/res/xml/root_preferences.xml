<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <ListPreference
            app:key="language_preference"
            app:title="@string/language"
            app:entries="@array/language"
            app:entryValues="@array/languageAlias"/>

        <SwitchPreferenceCompat
            app:key="theme_preference"
            app:title="@string/dark_mode"
            app:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/about_us">
        <Preference
            app:title="Version"
            app:summary="1.0.0"/>
        <Preference
            app:key="contact_preference"
            app:title="About Us"/>
    </PreferenceCategory>

</PreferenceScreen>